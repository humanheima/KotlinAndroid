<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ExceptionTestActivity">

    <Button
            android:id="@+id/btnTest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test1"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnTest1Revolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test1Revolution"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnTest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test2"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnTest2Revolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test2Revolution"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnTestParentJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试父级任务"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/btnTestAsyncThrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试async 不调用 wait，async代码块中是否会抛出异常"
            android:textAllCaps="false" />

</LinearLayout>