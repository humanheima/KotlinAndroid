<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AsyncExceptionTestActivity">

    <Button
        android:id="@+id/btnTest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="try/catch async代码块"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用CoroutineHandler"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="try/catch async外面的launch代码块"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTest4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用GlobalScope启动协程，try/catch async外面的launch代码块"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTest5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="根协程async"
        android:textAllCaps="false" />

</LinearLayout>